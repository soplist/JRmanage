	    		<tr>
	    			<td class="td_left">满意度：</td>
	    			<td class="td_right">
	    				<select style="width:180px;" class="easyui-combobox" id="callbrief" name="callbrief" required="true" >
	    				    <option value='0'>不满意</option>
	    				    <option value='1'>满意</option>
	    				</select> 
	    			</td>
	    			<td></td>
	    			<td></td>
