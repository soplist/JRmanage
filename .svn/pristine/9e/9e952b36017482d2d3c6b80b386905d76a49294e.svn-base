		//编辑公司选择取消
		$('#tb_edit_company_dialog_btc').on('click',function(){
			$('#tb_edit_company_dialog').dialog('close');
		});
	});
	
	function search(value,name){ 
		$('#dg_oldepcar').datagrid('reload',{"carnumber":value});
	} 	
</script>
